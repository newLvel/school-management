<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox spacing="20.0" styleClass="content-area" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.schoolmanagement.controllers.TeacherController">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <children>
                <Label text="Teachers" styleClass="header-title" />
                <HBox HBox.hgrow="ALWAYS" alignment="CENTER_LEFT" styleClass="search-box" maxWidth="300">
                    <children>
                        <FontIcon iconLiteral="fas-search" iconColor="#7f8c8d" />
                        <TextField fx:id="searchField" promptText="Search teachers..." styleClass="transparent-field" />
                    </children>
                </HBox>
                <HBox HBox.hgrow="ALWAYS" />
                <Button onAction="#handleAddTeacher" text="Add New Teacher" styleClass="btn-primary">
                    <graphic>
                        <FontIcon iconLiteral="fas-plus" iconColor="WHITE" />
                    </graphic>
                </Button>
            </children>
        </HBox>
        <TableView fx:id="teacherTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colFirstName" prefWidth="120.0" text="First Name" />
                <TableColumn fx:id="colLastName" prefWidth="120.0" text="Last Name" />
                <TableColumn fx:id="colEmail" prefWidth="180.0" text="Email" />
                <TableColumn fx:id="colPhone" prefWidth="120.0" text="Phone" />
                <TableColumn fx:id="colSpecialization" prefWidth="150.0" text="Specialization" />
                <TableColumn fx:id="colHireDate" prefWidth="100.0" text="Hire Date" />
                <TableColumn fx:id="colActions" prefWidth="150.0" text="Actions" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
    <padding>
        <Insets top="20.0" right="30.0" bottom="30.0" left="30.0" />
    </padding>
</VBox>