<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox spacing="20.0" styleClass="content-area" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.schoolmanagement.controllers.SettingsController">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <children>
                <Label text="User Management" styleClass="header-title" />
                <HBox HBox.hgrow="ALWAYS" />
                <Button onAction="#handleAddUser" text="Add New User" styleClass="btn-primary">
                    <graphic><FontIcon iconLiteral="fas-plus" iconColor="WHITE" /></graphic>
                </Button>
            </children>
        </HBox>
        <TableView fx:id="userTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colUsername" text="Username" prefWidth="200.0" />
                <TableColumn fx:id="colRole" text="Role" prefWidth="150.0" />
                <TableColumn fx:id="colActions" text="Actions" prefWidth="150.0" />
            </columns>
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
        </TableView>
    </children>
    <padding><Insets top="20.0" right="30.0" bottom="30.0" left="30.0" /></padding>
</VBox>
