<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox spacing="20.0" styleClass="content-area" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.schoolmanagement.controllers.StudentListController">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <children>
                <Label text="Students" styleClass="header-title" />
                <HBox HBox.hgrow="ALWAYS" alignment="CENTER_LEFT" styleClass="search-box" maxWidth="300">
                    <children>
                        <FontIcon iconLiteral="fas-search" iconColor="#7f8c8d" />
                        <TextField fx:id="searchField" promptText="Search students..." styleClass="transparent-field" />
                    </children>
                </HBox>
                <HBox HBox.hgrow="ALWAYS" />
                <Button onAction="#handleCreateStudent" text="Create New Student" styleClass="btn-primary">
                    <graphic>
                        <FontIcon iconLiteral="fas-plus" iconColor="WHITE" />
                    </graphic>
                </Button>
            </children>
        </HBox>
        <TableView fx:id="studentTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50.0" />
                <TableColumn fx:id="colFirstName" text="First Name" prefWidth="150.0" />
                <TableColumn fx:id="colLastName" text="Last Name" prefWidth="150.0" />
                <TableColumn fx:id="colClass" text="Class" prefWidth="120.0" />
                <TableColumn fx:id="colParent" text="Parent" prefWidth="150.0" />
                <TableColumn fx:id="colActions" text="Actions" prefWidth="150.0" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
    <padding>
        <Insets top="20.0" right="30.0" bottom="30.0" left="30.0" />
    </padding>
</VBox>